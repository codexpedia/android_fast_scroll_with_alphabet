        <TextView android:id="@+id/q" android:text="Q" android:tag="q" android:onClick="onScrollbarLettterClick" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/r" android:text="R" android:tag="r" android:onClick="onScrollbarLettterClick" android:layout_width="match_parent" android:layout_height="wrap_content"/>
